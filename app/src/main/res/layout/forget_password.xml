<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rl_quit_learning"
        android:layout_width="match_parent"
        android:layout_height="240dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="@dimen/one"
            app:cardMaxElevation="@dimen/ten">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/ten"
            android:text="Forget Password"
            android:textSize="@dimen/twenty"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_learning"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:fontFamily="sans-serif"
                    android:textColorHint="#c5c5c5"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/seven"
                        android:hint="Old Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="@dimen/ten"
                        android:text="rajendra"
                        android:textColor="@color/apptheme"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/old"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:fontFamily="sans-serif"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:textColorHint="#c5c5c5"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/seven"
                        android:hint="Old Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:text="rajendra"
                        android:maxLength="10"
                        android:padding="@dimen/ten"
                        android:textColor="@color/apptheme"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_ok"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_green"
            android:padding="@dimen/five"
           android:src="@drawable/ic_done"/>

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="60dp"
            android:layout_marginStart="@dimen/fifty"
            android:layout_height="60dp"
            android:padding="@dimen/five"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_clear"/>

    </LinearLayout>
</RelativeLayout>
</LinearLayout>