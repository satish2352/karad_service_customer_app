<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/twenty">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/applogop" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fifty">
                <View
                    android:layout_width="@dimen/mar_pad_30"
                    android:layout_height="@dimen/mar_pad_50"
                    android:background="@color/apptheme"/>
                <View
                    android:layout_width="@dimen/fifteen"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_height="@dimen/mar_pad_50"
                    android:background="@color/apptheme"/>
                <View
                    android:layout_width="@dimen/seven"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_height="@dimen/mar_pad_50"
                    android:background="@color/apptheme"/>
                <View
                    android:layout_width="@dimen/two"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_height="@dimen/mar_pad_50"
                    android:background="@color/apptheme"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Login"
                    android:padding="@dimen/seven"
                    android:layout_marginStart="@dimen/ten"
                    android:textStyle="bold"
                    android:textSize="@dimen/twenty"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/fifty">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginTop="@dimen/thrity"
                    android:layout_marginEnd="@dimen/ten"
                    app:helperTextTextColor="@color/apptheme"
                    android:hint="Enter Mobile Number"
                    app:helperText="Enter Only Register Mobile Number Here...">

                    <!--this is the actual edit text which takes the input-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/apptheme"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/btn_login"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/fifty"
                    android:layout_gravity="center"
                    android:padding="@dimen/ten"
                    android:background="@drawable/circle_apptheme"
                    android:layout_marginTop="@dimen/fifty"
                    android:src="@drawable/ic_left"/>



                <TextView
                    android:id="@+id/tv_regiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/ten"
                    android:text="Register"
                    android:textColor="@color/apptheme"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>