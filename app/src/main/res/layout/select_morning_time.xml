<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/seven">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/squer"
                android:layout_marginLeft="@dimen/mar_pad_5"
                android:layout_marginRight="@dimen/mar_pad_5">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/ten"
                    android:text="04"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLength="2"
                    android:background="@drawable/circle_apptheme"
                    android:layout_margin="@dimen/five"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/fifteen"/>
                <TextView
                    android:id="@+id/tv_time_m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ten"
                    android:text="7.00AM To 8.00AM"
                    android:textColor="@color/pin_normal"
                    android:textStyle="bold"
                    android:textSize="@dimen/fifteen"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_below="@+id/tv_time_m1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Available"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginBottom="@dimen/five"
                    android:textColor="@color/pin_normal"
                    android:textStyle="bold"
                    android:textSize="@dimen/fifteen"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>