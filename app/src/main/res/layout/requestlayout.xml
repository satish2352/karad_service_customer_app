<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10">

    <TextView
        android:id="@+id/req_bookingdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Booking Date"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="7.3"
        android:textColor="@color/black"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/seven"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/ten"
        android:layout_weight="2.7"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#E1F4F4F4"
            android:gravity="center"
            android:weightSum="10"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/req_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="@dimen/seven"
                android:layout_gravity="center"
                android:src="@drawable/no_image_available" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.8"
                android:layout_gravity="fill_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/req_businessname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five"
                    android:text="Business Name"
                    android:maxLines="2"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/apptheme"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="7"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/touch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/req_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:layout_marginLeft="15dp"
                            android:text="Type"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/thirteen" />

                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            android:text="mob No"
                            android:textColor="@color/black"
                            android:textSize="@dimen/thirteen" />

                        <TextView
                            android:id="@+id/tv_AppointmentData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five"
                            android:visibility="gone"
                            android:text="mob No"
                            android:textColor="@color/black"
                            android:textSize="@dimen/thirteen" />

                        <Button
                            android:id="@+id/req_cancelBtn"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:text="Cancel"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center"
                            android:backgroundTint="#F85F5F"
                            android:textSize="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/req_slot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Booking slot"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/black"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>